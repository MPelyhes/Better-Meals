    <div class="day-title">
      <h3>Sunday</h3>
    </div>
    <div class="meal-titles">
       <% if(sundayBreakfast) {%> 
        <div>
          <p class="meal-time">Breakfast</p>
          <h4>
            <a href="/myMeals/<%=sundayBreakfast._id%>"><%=sundayBreakfast.label.toString().substring(0,17)%></a>
          <h4>
          <p class="calories">Calories: <%=Math.floor(sundayBreakfast.calories / sundayBreakfast.servings)%>/serving</p>
        </div>
       <% } %>  
      <% if(sundayLunch) {%> 
        <div>
          <p class="meal-time">Lunch</p>
          <h4>
            <a href="/myMeals/<%=sundayLunch._id%>"><%=sundayLunch.label.toString().substring(0,17)%></a>
          <h4>
          <p class="calories">Calories: <%=Math.floor(sundayLunch.calories / sundayLunch.servings)%>/serving</p>
        </div>
      <% } %> 
      <% if(sundayDinner) {%> 
