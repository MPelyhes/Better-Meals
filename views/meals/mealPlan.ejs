          <h4>
            <a href="/myMeals/<%=sundayDinner._id%>"><%=sundayDinner.label.toString().substring(0,17)%></a>
          <h4>
          <p class="calories">Calories: <%=Math.floor(sundayDinner.calories / sundayDinner.servings)%>/serving</p>
        </div>
      <% } %> 
      <% if(sundayBreakfast && sundayLunch && sundayDinner) {%> 
      <div class="total-cal">
        <p class="calories">Total Calories: <%=Math.floor((sundayBreakfast.calories / sundayBreakfast.servings) + (sundayLunch.calories / sundayLunch.servings) + (sundayDinner.calories / sundayDinner.servings))%></p>
